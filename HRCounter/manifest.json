{
    "$schema": "https://raw.githubusercontent.com/bsmg/BSIPA-MetadataFileSchema/master/Schema.json",
    "id": "HRCounter",
    "name": "HRCounter",
    "author": "qe201020335",
    "version": "1.5.1",
    "icon": "HRCounter.Resources.hrcounter.png",
    "description": "A Counters+ custom counter that displays your heart rate in game.",
    "gameVersion": "1.19.0",
    "dependsOn": {
        "BSIPA": "^4.1.0",
        "BeatSaberMarkupLanguage": "^1.3.4",
        "SiraUtil": "^3.0.0"
    },
    "loadAfter": [
        "Counters+"
    ],
    "features": {
        "CountersPlus.CustomCounter": {
            "Name": "Heart Rate Counter",
            "Description": "A Counter that displays your heart rate in game.",
            "CounterLocation": "HRCounter.HRCounter",
            "ConfigDefaults": {
                "Enabled": false,
                "Position": "BelowCombo",
                "Distance": 1
            },
            "BSML": {
                "Resource": "HRCounter.UI.CountersPlus.config.bsml",
                "Host": "HRCounter.UI.CountersPlus.SettingController",
                "Icon": "HRCounter.Resources.hrcounter.png"
            }
        }
    }
}